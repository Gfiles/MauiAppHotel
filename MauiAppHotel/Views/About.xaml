<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.About"
             Title="">
    <VerticalStackLayout
         Padding="30,0"
         Spacing="25">
        
        <Label 
            Text="About"
            FontFamily="Kalam"
            Style="{StaticResource Headline}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label Text="Esta aplicação serve para calcular o valor da estadia conforme o numero de pessoas e datas da estadia."
            FontFamily="Kalam"
            Style="{StaticResource SubHeadline}"
            VerticalOptions="Center" />
        <Label Text="Desenvolvedor:
               Gavin Gonçalves"
            FontFamily="Kalam"
            Style="{StaticResource SubHeadline}"
            VerticalOptions="Center" />
        <Button
            Text="Back" 
            Clicked="btn_Clicked" />
    </VerticalStackLayout>
</ContentPage>